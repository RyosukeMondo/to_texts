[flake8]
# Maximum line length (matches black configuration)
max-line-length = 100

# Maximum cyclomatic complexity
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .eggs,
    target,
    .spec-workflow

# Ignore specific errors to avoid conflicts with black
# E203: whitespace before ':' (black compatibility)
# W503: line break before binary operator (black compatibility)
extend-ignore = E203, W503

# Per-file ignores
# F401: imported but unused (common in __init__.py for re-exports)
per-file-ignores =
    __init__.py:F401
